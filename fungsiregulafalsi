# Lakukan iterasi
for i in range(1, N + 1):
    # Hitung g(xi) dan f(xi)
    g_xi = g(xi)
    f_xi = f(xi)

    xi_str = f"{int(xi) if xi == int(xi) else xi:.6G}"
    g_xi_str = f"{int(g_xi) if g_xi == int(g_xi) else g_xi:.6G}"
    f_xi_str = f"{int(f_xi) if f_xi == int(f_xi) else f_xi:.6G}"


# Definisikan fungsi f(x) dan g(x)
def f(x):
    return x**2 - 2*x - 3

def g(x):
    return (x**2 - 3) / 2
